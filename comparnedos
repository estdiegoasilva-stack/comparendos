    <script>
        // Función para simular gráficos interactivos
        function simulateGraph(container, title, xData, yData) {
            Plotly.newPlot(container, [{
                x: xData,
                y: yData,
                type: 'bar'
            }], {
                title: title,
                xaxis: { title: 'Categoría' },
                yaxis: { title: 'Valor' }
            });
        }

        // Gráficos de ejemplo (puedes reemplazar con tus datos reales)
        simulateGraph('descriptive-graph-1', 'Comparendos por Día', ['Lunes', 'Martes', 'Miércoles'], [120, 150, 200]);
        simulateGraph('descriptive-graph-2', 'Infracciones por Tipo', ['Velocidad', 'Estacionamiento'], [300, 250]);

        simulateGraph('diagnostic-graph-1', 'Zonas Críticas', ['Zona 1', 'Zona 2'], [400, 350]);
        simulateGraph('diagnostic-graph-2', 'Horarios Críticos', ['Mañana', 'Tarde'], [500, 450]);

        simulateGraph('predictive-graph-1', 'Proyección Mensual', ['Enero', 'Febrero'], [100, 120]);
        simulateGraph('predictive-graph-2', 'Proyección por Zona', ['Zona 1', 'Zona 2'], [200, 220]);

        simulateGraph('prescriptive-graph-1', 'Asignación de Agentes', ['Lunes', 'Martes'], [10, 12]);
        simulateGraph('prescriptive-graph-2', 'Recomendaciones de Infraestructura', ['Zona 1', 'Zona 2'], [5, 8]);
    </script>
